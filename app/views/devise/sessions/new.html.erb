<div><span><h2>Log in to</h2></span>
<span><h2 style="color:#0d6efd">Acebook</h2></span></div>

<%# <div class= "boarder p-3 mb-2 bg-light"> %>
<div class="shadow p-3 mb-5 bg-white rounded">
<br/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
  </div>

 <br/>
 
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br/>
  <div class="d-grid gap-2 col-2 "> 
  <%# #mx-auto %>
  <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>
<br/>


<%= render "devise/shared/links" %>
</div>