<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="card-title">Log in</h2>
      <p class="card-text"></p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, id: 'email', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, id: 'password', autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
      </p>
      <a href="#" class="card-link"><%= render "devise/shared/links" %></a>
    </div>
  </div>
</div>
