<%= render "devise/shared/error_messages", resource: resource %>

<div id="login-box">
  <h2 id="signup-title">Create a new account</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>

      <%= f.text_field :username, placeholder: "Username" %>

      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Retype password" %>
      <span style="font-size:10px;">(<%= @minimum_password_length %> characters minimum, 10 characters maximum.)</span>

      <%= f.submit "Sign up" %> <%= render "devise/shared/links" %>

    <% end %>
</div>
