$('.liked-button').on('ajax:success', function() {
  console.log("trigger change to like")
  $(this).parent().parent().find('.like_count')
  .html('<%= @album.get_likes.size %> &#128077');
  $(this).closest('.liked-button').html('Like');
  $(this).closest('.liked-button').addClass('like-button').removeClass('liked-button');
});

