<p id="notice"><%= notice %></p>

<h1>Bios</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Age</th>
      <th>Bio</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><%= bio.id %></td>
        <td><%= bio.age %></td>
        <td><%= bio.bio %></td>
        <td><%= bio.location %></td>
        <td><%= link_to 'Show', bio %></td>
        <td><%= link_to 'Edit', edit_bio_path(bio) %></td>
        <td><%= link_to 'Destroy', bio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

