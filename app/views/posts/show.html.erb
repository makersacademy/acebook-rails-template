<p>
  <strong>Message:</strong>
  <%=simple_format(@post.message) %>
</p>

<span id='post-likes'>
  <%= link_to like_post_path(@post, like: true), method: 'post', remote: true do %><button class='like-button'>ğŸ‘</button><% end %>
  <span id="post_<%= @post.id %>_likes">Likes (<%= @post.likes.size %>)</span>
</span>
<%= link_to 'Comment', new_post_comment_path(@post) %>
<p>
  <% @post.comments.each do |comment| %>
  <span> <%= User.find(comment.user_id).name %> commented:
  <%= comment.body %>
<td><i><%= comment.created_at.asctime %></i></td> </span>
  <br>
  <% if Time.now - 10.minutes <= comment.created_at.asctime %>
    <%= link_to 'Edit comment', edit_post_comment_path(@post, comment) %>
    <% end %>
  <%= link_to 'Destroy comment', post_comment_path(comment),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this comment? '} %>
  <br>
  <% end %>
</p>

<% if @post.user_id == current_user.id %>
