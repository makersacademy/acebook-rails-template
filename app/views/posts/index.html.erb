<section class="section">
<div class="container">
<% @posts.each do |post| %>
  <p><%= post.message %></p>
  <p><%= post.created_at %></p>
  <%= link_to 'Show', post_path(post) %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
<% end %>
</div>
<br>
<div class="container">
<%= link_to new_post_path do %>
  New post
<% end %>
</div>
</section>