<%= link_to "View profile", current_user %>

<%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </br></br>

<%= form_for(@post) do |form| %>
  <%= form.label :"what's on your mind?" %><br>
  <%= form.text_area :message, :cols => "60", :rows => "4" %>

  <%= form.submit "Post" %>
<% end %>

<% @posts.each.reverse_each do |post| %>
  <p><%= post.message %></p>
  <%= post.user.firstname %>

  <%= post.created_at.in_time_zone("London").strftime("%H:%M %b %d, %Y") %>
<% end %>
