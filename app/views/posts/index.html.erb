<body>
<% if !!flash[:notice] %>
  <% flash.each do |type, message| %>
    <p><%= message %></p> <br>
  <% end %>
<% end %>

<h4>Welcome to Acebook you are logged in as: <%= current_user.email %></h4>
  <% @posts.reverse.each do |post| %>
    <div>
      <div class="post" >
        <%= post.message %><br>
        <small>
          Updated <%= time_ago_in_words(post.updated_at) %> ago, <br>
          <%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
        </small>
        <% if post.created_at > 10.minutes.ago %> 
            <td><div class="button" id="update-button"><%= button_to 'Update', edit_post_path(post) %></div></td>
        <% end %>
        <td><div class="button" id="delete-button"><%= button_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure' }%></div></td>
      </div>
    </div>
    <br>
    <br>
  <% end %>
<br>
<br>

<%= link_to new_post_path do %>
  New post
<% end %>
</body>



