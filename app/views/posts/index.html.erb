<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Name</th>
      <th colspan="2">Date/Time</th>
      <th colspan="2""><center>Created at </center></th>
      <th colspan="3">Options</th>
    </tr>
  </thead>


  <tbody>
    <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= simple_format(post.message) %></td>
        <td><%= " #{User.find(post.user_id).first_name} #{User.find(post.user_id).surname} " %></td>

        <td><%= post.created_at.strftime("%d/%m/%y") %></td>
        <td><%= post.created_at.strftime("%H:%M") %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% post.comments %>
    <% end %>
  </tbody>
</table>


<br>

