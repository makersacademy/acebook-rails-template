<%= stylesheet_link_tag "style" %>



<div class="container">
  <% if current_user %>
    <h2>Welcome to Acebook,<%= current_user.name.capitalize %>!</h2>
  <% end %>
  <%= link_to 'New post', new_post_path %>

  <% if flash[:danger] %>
    <%= flash[:danger] %>
  <% end %>

  <%= render partial: "chatbox" %>

  <div class="container" id="posts">
    <% @posts.each do |post| %>
      <div class="border" name="post" id="post_<%= post.id %>">
        <br>
        <div id="post_format">
          <h4><%= post.user.name.capitalize %></h4>
          <p id="time"><%= post.updated_at.strftime("%e %b %Y") %></p>
          <span id="post_content"><%= simple_format(post.message) %></span>
        </div>
        <% if post.user == current_user %>
          <%= link_to '‚ùå', post_path(post), method: :delete, id: "delete-#{post.id}" %>
          <% if post.editable? %><%= link_to '‚úèÔ∏è', edit_post_path(post.id) %><% end %>
        <% end %>
        <%= link_to 'üí¨', new_post_comment_path(post.id) %>
        <span class="pull-right">
          <%= link_to like_post_path(post), method: 'post', remote: true do %> üëç
            <span id="Post_<%= post.id %>_likes"><%= post.likes.count %>likes</span>
          <% end %>
        </span>
      <div class="container border" id="comments">
        <% post.comments.each do |comment| %>
          <div class="container" name="comment" id="comment_<%= comment.id %>">
            <p><%= comment.comment %></p>
          <% if comment.user == current_user %>
            <span class="comment_buttons"><%= link_to '‚ùå', post_comment_path(post, comment), method: :delete, id: "delete-#{comment.id}" %></span>
            <% if comment.editable? %>
              <span class="comment_buttons"><%= link_to '‚úèÔ∏è', edit_post_comment_path(post.id, comment.id) %></span>
            <% end %>
          <% end %>
          <span class="pull-right">
            <%= link_to like_post_comment_path(post, comment), method: 'post', remote: true do %> üëç
              <span id="Comment_<%= comment.id %>_likes"><%= comment.likes.count %>likes</span>
            <% end %>
          </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
