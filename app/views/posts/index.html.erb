<h1>Welcome to your Acebook newsfeed!</h1>

<% @posts.each_with_index do |post, idx| %>
  <div id="post_div_<%=idx%>">
    <p id="post_body_<%=idx%>"><%= post.message %></p>

    <h5><%= link_to 'Delete', post_path(post), method: :delete %></h5>

    <p><%= link_to 'Show', post_path(post) %></p>
    <p><%= link_to 'Edit', edit_post_path(post) %></p>

  </div>
<% end %>

<%= link_to new_post_path do %>
New post
<% end %>
