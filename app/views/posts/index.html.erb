<div class="container">
    <table style="text-align: center" class="table">
        <tr class="jumbotron text-center">
            <th style="text-align: center"><span class="wall">AceBook Wall</span></th>
            <th colspan=“2”></th>
        </tr>
        <% @posts.reverse.each do |post| %>
            <%@user = User.find(post.user_id) %>
                <tr>
                    <td>
                        <% if post.message.length > 30%>
                          <%= simple_format(post.message.gsub('<', '< ')[0..30] )%><%= link_to '. . . . ', post_path(post) %>
                          <%# check if can create pop up here if greater than 50 %>
                         <%else%>
                           <%= simple_format(post.message.gsub('<', '< '))%>
                         <%end%>
                            <div class="greyv">Posted:
                                <%= post.created_at.strftime("%d/%m/%Y") %><%=" | "%><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%>
                                <% if post.updated_at != post.created_at %>
                                    <p>(edited)</p>
                                <% end %>
                                    <div>
                                        <%= link_to @user.username, user_path(post.user_id), class: "user-colour" %> <br>
                                            <%= link_to user_path(post.user_id) do %>
                                                <%= image_tag(@user.avatar, style:'width:5%') if @user.avatar.attached?%>
                                                    <% end %><br>
                                                        <%= link_to 'See Post', post_path(post) %>
                                    </div>
                            </div>
                    </td>
                    <td>
                        <%= form_with(model: [ post, post.comments.build ], local: true) do |form| %>
                            <p>
                            </p>
                            <p>
                                <%= form.text_area :body %>
                            </p>
                            <p>
                                <%= form.submit %>
                            </p>
                          <% end %>
                    </td>
                    <% if current_user.id == post.user_id  %>
                    <td>
                        <%= link_to 'Delete post |', post_path(post),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
                            <%= link_to 'Edit post', edit_post_path(post) %>
                    <% end %> <br>
                    </td>
                </tr>
                <% end %>

                <button> <%= link_to new_post_path do %>
                  Add new post </button>
                <% end %>
                <button> <%= link_to 'See Albums', albums_path %></button>
                <button> <%= link_to 'Create New Album', '/albums/new' %></button>
                <div class=" text-center">
                    <div class=" text-center">
                        <td class="jumbotron text-center">
                            <%= link_to 'Back', root_path %>
                        </td>
    </table>
    </div