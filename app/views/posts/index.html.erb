<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Message</th>

  </tr>

  <% @posts.reverse.each do |post| %>
    <tr>
      <td><%= link_to(post_path(post)) do  %>
        <strong><%=simple_format(post.message) %></strong>
        <% end %>
      </td>
      <td><i>by: <%= User.find(post.user_id).name %></i></td>
      <td><%= post.created_at.asctime %></td>

      <% if post.user_id == current_user.id %>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <td>
        <span id='home-post-likes'>
        <%= link_to like_post_path(post, like: true), method: 'post', remote: true do %><button class='like-button'>ğŸ‘</button><% end %>
        <span id="post_<%= post.id %>_likes">Likes (<%= post.likes.size %>)</span>
      </span>
      </td>
      <td><%= link_to "Comment", new_post_comment_path(post) %></td>
    </tr>
  <% end %>
</table>
