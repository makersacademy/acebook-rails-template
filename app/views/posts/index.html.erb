<h1>Welcome <%= current_user.name %></h1>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<div class="news_feed">
<% @posts.each do |post| %>
  <div class="post"><p class="name"><%= User.find_by(id: post.user_id).name %>:</p>
  <p class="message"><%= post.message %> </p> 
  <p class="post_time"><%= post.updated_at %></p>
  <p class="edited"><%= "Edited" if post.updated_at != post.created_at %> </p>
  <% if current_user.id == post.user_id %>
        <p class="delete_button"><%= link_to 'delete', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></p>
        <%= link_to "Edit post", edit_post_path(:id => post.id) %>
      <% end %>
  
 <label id=<%="post_flash_" + post.id.to_s %>  style="color:red;"> <%=flash[post.id.to_s]%></label>
  <hr>
  <script>
    setTimeout(function(){$('#post_flash_<%=post.id.to_s%>').fadeOut();}, 3000);
  </script>
  </div>
<% end %>
</div>

<%= link_to new_post_path do %>
  New post
<% end %>


