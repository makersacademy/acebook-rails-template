<div class="text-center">
<br>

<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field  :receiver_id, value: current_user.id %>
  <%=form.hidden_field  :feed, value: true%>
  <%= form.submit "Submit" %>
<% end %>

</div>

