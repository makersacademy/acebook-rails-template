<div class="container text-center">
  <%= image_tag @user.gravatar_url %><h1><%=@user.first_name%> <%=@user.last_name%></h1>
</div>

<% if current_user == @user %>
<% @allUsers.each do |user| %>
<h1><%= user.first_name %></h1><br>
<% end %>
<div class="container new-post-container">
    <%= link_to new_post_path do %>
      <button class="btn btn-new-post">New Post</button>
    <% end %>
  <% end %>
</div>

<div class="container cards-container">
  <% @posts.reverse.each do |user_post| %>
    <% @post_user = User.find(user_post.user_id) %>
      <div class="card">
        <div class="card-body">
          <div>
            <p class="username"><%= image_tag @post_user.gravatar_url(:size => 30) %>      <%=link_to @post_user.first_name, user_path(@post_user.id)%></p>
            <p class="post-time"><%= user_post.created_at.strftime("%d/%m/%y") %></p>
          </div>
          <div class="message-container">
            <p class="post-message"><%= user_post.message %></p>
          </div>
          <% pre_like = user_post.likes.find { |like| like.user_id == current_user.id} %>
          <% if pre_like %>
            <button class="btn btn-unlike">
              <i class="far fa-thumbs-down"></i>
              <%= link_to 'Unlike', post_like_path(user_post, pre_like), method: :delete%>
              <p class="likes-count"><%= user_post.likes.count %></p>
            </button>
          <% else %>
            <button class="btn btn-like">
              <i class="far fa-thumbs-up"></i>
              <%= link_to 'Like', post_likes_path(user_post), method: :post%>
              <p class="likes-count"><%= user_post.likes.count %></p>
            </button>
          <% end %>
          <% if current_user == @post_user %>
            <button class="btn btn-delete">
              <i class="fas fa-trash-alt"></i>
              <%= link_to 'Delete', user_post, method: :delete%>
            </button>
            <button class="btn btn-edit" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              <i class="far fa-edit"></i>
              <label class="update">Update</label>
            </button>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <%= bootstrap_form_for(user_post) do |f| %>
                    <p><%= f.text_area :message,
                                        rows: 6,
                                        required: true,
                                        minlength: 0,
                                        maxlength: 1000,
                                        placeholder: user_post.message,
                                        class: 'form-control' %></p>
                  <%= f.submit "Accept", class: 'form-control create-post-button' %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
</div>