<div class='container'>
<div class="card bg-light mb-3" style="max-width: 20rem;">
  <%= link_to(album) do %>
    <div class="card-header"><h5 align='center'><%= album.title%></h5></div>
    <p class="card-text" align='center'><%= image_tag(@photos.first.image.url, width:'160px') %></p>
  <% end %>
