<br><div class="edit-body"><h2>Sign up</h2>

<div class="edit-block"><%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, class: "form-label" %><br /> 
    <%= f.text_field :first_name, autofocus: true, class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "form-label" %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :profile_picture, class: "form-label" %><br />
    <%= f.file_field :avatar , class: "form-text"%><br>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "form-text" %>
  </div>
<% end %></div><br>

<%= render "users/shared/links" %></div><br>
