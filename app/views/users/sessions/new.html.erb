<br><div class="edit-body"><h2>Log in</h2>

<div class="edit-block"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email", class: "form-text" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-text" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %></div><br>

<%= render "users/shared/links" %></div><br>
