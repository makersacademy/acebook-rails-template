<div class = 'post-box'>
  <p id=”alert”><%= alert %></p>
  <p id=”notice”><%= notice %></p>
  <h1>Login</h1>
  <%= form_tag sessions_path do |form| %>
    <div class=”field”>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class=”field”>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <br>
    <div class=”actions”>
      <%= submit_tag 'Login' %>
    </div>
</div>
<% end %>
